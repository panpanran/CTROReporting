@using Microsoft.AspNet.Identity
@model Attitude_Loose.ViewModels.UserProfileViewModel
@{
    ViewBag.Title = "CTRP Reporting";
}


<div id="profle" class="col-md-12">
    <div id="userProfle" class="well col-md-3" style="float:left;">
        <fieldset>
            <legend class="col-md-12">
                <a href="#" id="editpicture" onclick="EditProfile();">@Html.DisplayFor(m => m.UserName)</a>
                @*<a data-toggle="modal" href="#" id="editpicture" onclick="EditProfile();">
                        <col-md- rel="tooltip"
                              title="Edit Profile Picture"><i class="glyphicon glyphicon-edit"></i></col-md->
                    </a>*@
            </legend>
        </fieldset>

        <div id="profilepic" style="float:left;" class="col-md-12">
            <table>
                <tr>
                    <td>
                        @if (String.IsNullOrEmpty(Model.ProfilePicUrl))
                        {
                            <img src="~/Images/facebook-avatar.png" class="img-fluid" />
                        }
                        else
                        {
                            <img src="@Url.Content(Model.ProfilePicUrl)" class="img-fluid" />
                        }
                    </td>
                </tr>
            </table>
        </div>
        <div id="divBasicInfo" style="float:left;" class="col-md-12">
            <table class="table">
                @*<td>
                        @if (User.Identity.GetUserId() == Model.UserId)
                        {
                            <div style="float: right">
                                <a data-toggle="modal" href="#" id="editprofile" onclick="EditBasicInfo();">
                                    <col-md- rel="tooltip" title="Edit Basic Info"><i class="glyphicon glyphicon-edit"></i></col-md->
                                </a>
                            </div>
                        }
                    </td>*@
                <tr>
                    <td>
                        User Name:
                    </td>
                    <td>
                        @Html.DisplayFor(m => m.UserName)
                    </td>
                </tr>
                @if (Model.FirstName != null)
            {
                    <tr>
                        <td>
                            First Name:
                        </td>
                        <td>
                            @Html.DisplayFor(m => m.FirstName)
                        </td>
                    </tr>
                }
                @if (Model.LastName != null)
            {
                    <tr>
                        <td>
                            Last Name:
                        </td>
                        <td>
                            @Html.DisplayFor(m => m.LastName)
                        </td>
                    </tr>
                }
                @if (Model.Email != null)
            {
                    <tr>
                        <td>
                            Email:
                        </td>
                        <td>
                            @Html.DisplayFor(m => m.Email)
                        </td>
                    </tr>
                }
                @if (Model.DateOfBirth != null)
            {
                    <tr>
                        <td>
                            Date Of Birth:
                        </td>
                        <td>
                            @Html.DisplayFor(m => m.DateOfBirth)
                        </td>
                    </tr>
                }
                @if (Model.Gender != null)
            {
                    <tr>
                        <td>
                            Gender:
                        </td>
                        <td>
                            @if (Model.Gender == true)
                            {
                                <text>Female</text>
                            }
                            else if (Model.Gender == false)
                            {
                                <text>Male</text>
                            }
                            else
                            {

                            }
                        </td>
                    </tr>
                }


                @*<td>
                        @if (User.Identity.GetUserId() == Model.UserId)
                        {

                            <div style="float: right">
                                <a data-toggle="modal" href="#" id="edit" onclick="EditPersonalInfo();">
                                    <col-md- rel="tooltip"
                                          title="Edit Personal Info"><i class="glyphicon glyphicon-edit"></i></col-md->
                                </a>
                            </div>
                        }
                    </td>*@
                @if (Model.Address != null)
            {
                    <tr>
                        <td>
                            Address
                        </td>
                        <td>
                            @Html.DisplayFor(m => m.Address)
                        </td>
                    </tr>
                }
                @if (Model.City != null)
            {
                    <tr>
                        <td>
                            City
                        </td>
                        <td>
                            @Html.DisplayFor(m => m.City)
                        </td>
                    </tr>
                }
                @if (Model.State != null)
            {
                    <tr>
                        <td>
                            State
                        </td>
                        <td>
                            @Html.DisplayFor(m => m.State)
                        </td>
                    </tr>
                }
                @if (Model.Country != null)
            {
                    <tr>
                        <td>
                            Country
                        </td>
                        <td>
                            @Html.DisplayFor(m => m.Country)
                        </td>
                    </tr>
                }
                @if (Model.ZipCode != null)
            {
                    <tr>
                        <td>
                            ZipCode
                        </td>
                        <td>
                            @Html.DisplayFor(m => m.ZipCode)
                        </td>
                    </tr>
                }
                @if (Model.ContactNo != null)
            {
                    <tr>
                        <td>
                            Contact No
                        </td>
                        <td>
                            @Html.DisplayFor(m => m.ContactNo)
                        </td>
                    </tr>
                }
            </table>
        </div>
    </div>
    <div class="col-md-1">
    </div>
    <div class="well col-md-3">
    </div>
    <div class="col-md-1">
    </div>
    <div class="well col-md-3">
    </div>

</div>
<script type="text/javascript">
    $(function () {
        $('#divusernotification').niceScroll();
    });
    $('#imge').click(function () {
        $('#myModal').modal('toggle');
    });
</script>

<div id="myModal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-body">
        @if (!String.IsNullOrEmpty(Model.ProfilePicUrl))
            {
            <img src="@Url.Content(Model.ProfilePicUrl)" />
        }
    </div>
    <div class="modal-footer">
        <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
    </div>
</div>
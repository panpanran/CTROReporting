@model Attitude_Loose.ViewModels.RegisterViewModel
@{
    ViewBag.Title = "Register";
    Layout = "../Shared/_Layout.cshtml";
}

<link href="/Content/CustomStyles.css" rel="stylesheet" type="text/css" />

<nav class="navbar navbar-toggleable-md navbar-inverse bg-inverse">
    <a class="navbar-brand" href='@Url.Action("Index", "Home")'>Attitude Loose</a>
</nav>
<div class="container-fluid margin-top">
    <div class="row">
        <div class="col-md-8">
            <img src="/Images/Background.jpg" class="img-fluid" />
        </div>

        <div class="col-md-4">
            <section id="registerForm">
                @using (Html.BeginForm("Register", "ApplicationUser", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    <h4>Create a new account.</h4>
                    <hr />
                    @Html.ValidationSummary()
                    <div class="form-group">
                        @Html.LabelFor(m => m.UserName, new { @class = "col-md-2 control-label", style = "text-align: left;width:80px;" })
                        <div class="col-md-10">
                            @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
                        </div>
                    </div>
                    <br />
                    <div class="form-group">
                        @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label", style = "text-align: left;width:80px;" })
                        <div class="col-md-10">
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                        </div>
                    </div>
                    <br />
                    <div class="form-group">
                        @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label", style = "text-align: left;width:80px;" })
                        <div class="col-md-10">
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                        </div>
                    </div>
                        <br />
                        <div class="form-group">
                            @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 control-label", style = "text-align: left;width:80px;" })
                            <div class="col-md-10">
                                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                            </div>
                        </div>
                            <br />
                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" class="btn btn-primary" value="Register" />
                                </div>
                            </div>
                }
            </section>
        </div>
    </div>
</div>

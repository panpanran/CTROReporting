@using Microsoft.AspNet.Identity

@model Attitude_Loose.ViewModels.TopicFormModel
@{
    ViewBag.Title = "Home Page";
    //Layout = "~/Views/Shared/_HomeLayout.cshtml";

}
<div>
    <div>
        @using (Html.BeginForm("Create", "Topic", FormMethod.Post, new { @id = "form" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)

            <fieldset>
                <legend></legend>
                <table>
                    <tr>
                        <td>
                            @Html.TextBoxFor(model => model.TopicName, new { @class = "col-md-12", style = "display:block;float:left", placeholder = "Enter the Topic name" })
                            @Html.ValidationMessageFor(model => model.TopicName)
                        </td>
                    </tr>
                    <tr>
                        <td>
                            @Html.TextAreaFor(model => model.Desc, new { @class = "col-md-12", placeholder = "Enter the description", style = "display:block;float:left" })
                            @Html.ValidationMessageFor(model => model.Desc)
                        </td>
                    </tr>
                    <tr>
                        <td>

                            @Html.DropDownListFor(model => model.MetricId, Model.Metrics, "--Select Domain--", new { @class = "col-md-12", @style = "display:block;width:270px;;float:left" })
                            @Html.ValidationMessageFor(model => model.MetricId)
                        </td>
                    </tr>
                    @*<tr>

                            <td>
                                @Html.TextBoxFor(model => model.CreatedDate, new { @class = "ui-datepicker col-md-12", @style = "display:block;width:270px;;float:left", placeholder = "Enter the start date", @readonly = "readonly" })
                                @Html.ValidationMessageFor(model => model.CreatedDate)
                            </td>
                        </tr>*@



                    @*<tr>
                            <td>@Html.CheckBoxFor(model => model.TopicType, true)&nbsp;&nbsp;Make this goal as private</td>
                        </tr>
                        <tr><td height="20"></td></tr>*@
                    <tr>
                        <td>
                            <br /><br />
                            <button class="btn btn-primary" type="submit">Create</button>&nbsp;&nbsp;
                            <button class="btn" type="reset" value="Cancel" onclick="window.location.href='@Url.Action("Index", "Home")'">Cancel</button>
                        </td>
                    </tr>

                    @Html.Hidden("UserId", User.Identity.GetUserId())

                </table>

            </fieldset>
        }
    </div>
</div>
<script type="text/javascript">


    $(document).ready(function () {

        $('.ui-datepicker').each(function (i, v) {
            $(v).datepicker({
                dateFormat: 'dd-M-yy',
                buttonImage: '@Url.Content("~/Images/calendar.gif")',
                buttonImageOnly: true,
                showOn: "button"
            });

        });

        $('#form').submit(function(e)  {
                    e.preventDefault();
                    return false;
            }

        });

    });

    $("#Description").focus(function () {
        $(this).animate({ "height": "60px" }, "slow");
        return false;
    });
    $("#Description").blur(function () {
        $("#Description").animate({ "height": "22px" }, "slow");
        return false;
    });

    $(function () {
        $("#targetinfo").popover();
    });


    function DecimalValidate(num) {
        var regex = /^[-+]?[0-9]+(\.[0-9]+)?$/;
        if (regex.test(num)) {
            return true;
        } else {
            return false;
        }
    }


</script>

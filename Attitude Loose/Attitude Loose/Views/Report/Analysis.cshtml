
<h1>Chart Report</h1>

<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.7.1/Chart.min.js"></script>

<canvas class="my-4" id="myChart" width="900" height="380"></canvas>
<script>
    var ctx = document.getElementById("myChart");
    var config = {
        type: 'line',
        data: {
            labels: ["Week1", "Week2", "Week3", "Week4"],
            datasets: [
                {
                    label: 'Bobbie',
                    data: [1, 2, 0, 5],
                    lineTension: 0,
                    backgroundColor: "#f2494c",
                    borderColor: "#f2494c",
                    borderWidth: 4,
                    pointBackgroundColor: '#007bff',
                    fill: false
                },
                {
                    label: 'Sisi',
                    data: [5, 4, 0, 2],
                    lineTension: 0,
                    backgroundColor: "#4857f1",
                    borderColor: "#4857f1",
                    borderWidth: 4,
                    fill: false
                }]
        },
        options: {
            responsive: true,
            title: {
                display: true,
                text: 'Chart.js Line Chart'
            },
            tooltips: {
                mode: 'index',
                intersect: false,
            },
            hover: {
                mode: 'nearest',
                intersect: true
            },
            scales: {
                xAxes: [{
                    display: true,
                    scaleLabel: {
                        display: true,
                        labelString: 'Month'
                    }
                }],
                yAxes: [{
                    display: true,
                    scaleLabel: {
                        display: true,
                        labelString: 'Value'
                    }
                }]
            }
        }
    };

    var newDataset = {
        label: 'Dataset ' + config.data.datasets.length,
        backgroundColor: "#FFFF00",
        borderColor: "#FFFF00",
        data: [],
        fill: false
    };
    for (var index = 0; index < config.data.labels.length; ++index) {
        newDataset.data.push(2);
    }

    config.data.datasets.push(newDataset);

    var myChart = new Chart(ctx, config);
</script>